<div class="container">
  <!-- Main jumbotron for a primary marketing message or call to action -->
    <div class="jumbotron">
      <div class="container">
        <h1>Admin Register</h1>
        <p>You must be registered to post, edit or delete posts in this blog. Please register an account</p>

        <% if !@errors.nil?%>
          <% @errors.each do |error| %>
              <%= error%>
            <%end%>
          <% end %><br>

        <form action='/register' method='post'>
          <div class="form-group">
            <label for="registeremail">Email address</label>
            <input type="email" class="form-control" name="user[email]" placeholder="Enter email" required="true">
          </div>
          <div class="form-group">
            <label for="registerpassword">Password</label>
            <input type="password" class="form-control" name="user[password]" placeholder="Password" required="true">
          </div>
          <button type="submit" class="btn btn-primary btn-lg">Register &raquo;</button>
        </form>

      </div>
    </div>

    <div class="container">
      <!-- Example row of columns -->
      

      <hr>

      <footer>
        <p>&copy; Company 2014</p>
      </footer>
    </div> <!-- /container -->
</div>
